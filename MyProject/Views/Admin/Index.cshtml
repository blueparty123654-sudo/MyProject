@{
    ViewData["Title"] = @Localizer["Admin Dashboard"];
}

<div class="container mt-4">
    <h1 class="text-center mb-5"><i class="fas fa-user-shield me-2"></i>@Localizer["Admin"]</h1>

    <div class="row g-3 justify-content-center">
        @* ----- Card 1: Payments ----- *@
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-receipt fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">@Localizer["Manage Payments"]</h5>
                    <p class="card-text">@Localizer["View and update customer payment statuses."]</p>
                    <a asp-action="ManagePayments" asp-controller="Admin" class="btn btn-primary">@Localizer["Go to Management Page"]</a>
                </div>
            </div>
        </div>

        @* ----- Card 2: Redemptions ----- *@
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-gift fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">@Localizer["Manage Redemptions"]</h5>
                    <p class="card-text">@Localizer["View and update reward redemption statuses."]</p>
                    <a asp-action="ManageRedemptions" asp-controller="Admin" class="btn btn-warning">@Localizer["Go to Management Page"]</a>
                </div>
            </div>
        </div>

        @* ----- Card 3: Stock ----- *@
        <div class="col-md-4">
            <div class="card text-center shadow-sm h-100">
                <div class="card-body">
                    <i class="fas fa-boxes fa-3x text-success mb-3"></i>
                    <h5 class="card-title">@Localizer["Manage Product Stock"]</h5>
                    <p class="card-text">@Localizer["View and add stock for products at each branch."]</p>
                    <a asp-action="ManageStock" asp-controller="Admin" class="btn btn-success">@Localizer["Go to Management Page"]</a>
                </div>
            </div>
        </div>
    </div>
</div>