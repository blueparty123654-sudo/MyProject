@{
    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="UTF-8">
    <title>รีวิวการใช้บริการ</title>
    <link href="https://fonts.googleapis.com/css2?family=Kanit&display=swap" rel="stylesheet">
</head>

<h1>@Localizer["home"]</h1>

<!-- 🔹 ส่วนรีวิว -->
<div class="review-container">
    <h1>Review Now</h1>

    <form id="commentForm">
        <label for="car">เลือกรถ:</label>
        <select id="car">
            <option value="">-- กรุณาเลือกรถ --</option>
            <option value="Honda Click 125i">Honda Click 125i</option>
            <option value="Yamaha Aerox">Yamaha Aerox</option>
            <option value="Suzuki Smash">Suzuki Smash</option>
        </select>

        <label for="branch">เลือกสาขา:</label>
        <select id="branch">
            <option value="">-- กรุณาเลือกสาขา --</option>
            <option value="กรุงเทพ">กรุงเทพ</option>
            <option value="เชียงใหม่">เชียงใหม่</option>
            <option value="ภูเก็ต">ภูเก็ต</option>
        </select>

        <label>ให้คะแนน:</label>
        <div class="rating" id="rating">
            <span data-value="1">★</span>
            <span data-value="2">★</span>
            <span data-value="3">★</span>
            <span data-value="4">★</span>
            <span data-value="5">★</span>
        </div>

        <label for="comment">แสดงความคิดเห็น:</label>
        <textarea id="comment" placeholder="เขียนความคิดเห็นของคุณ..."></textarea>

        <label for="name">ชื่อของคุณ:</label>
        <textarea id="name" placeholder="กรอกชื่อของคุณ..."></textarea>

        <button type="submit">ส่งรีวิว</button>
    </form>

    <div id="reviewList" class="review-list">
        <h2 style="width: 100%; text-align:center; color:#1e3a8a;">รีวิวล่าสุด</h2>
    </div>
</div>