@model IEnumerable<MyProject.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "รายการรถมอเตอร์ไซค์";
}

<div class="container">
    @* 👈 1. ติดป้ายให้หัวข้อหลัก *@
    <h1 class="page-title">🏍️ เลือกรถที่ใช่สำหรับคุณ 🏍️</h1>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                @* 👈 2. ติดป้ายให้การ์ดหลัก *@
                <div class="custom-card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">
                            <strong>@product.PricePerDay.ToString("N0")</strong> บาท/วัน <br>
                            <strong>@product.PricePerWeek.ToString("N0")</strong> บาท/สัปดาห์ <br>
                            <strong>@product.PricePerMonth.ToString("N0")</strong> บาท/เดือน
                        </p>
                    </div>
                    <div class="card-footer">
                        @* 👈 3. ติดป้ายให้ปุ่มกด *@
                        <a href="#" class="btn btn-card-action">ดูรายละเอียด</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>