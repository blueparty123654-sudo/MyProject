@model MyProject.ViewModels.ProfileViewModel

<div class="modal fade" id="profileModal" tabindex="-1" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="profileModalLabel">โปรไฟล์ของฉัน</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="profileAlert" class="alert" role="alert" style="display: none;"></div>
                <form id="profileForm" asp-controller="Account" asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="row mb-3 align-items-center">
                        <label asp-for="UserName" class="col-md-4 col-form-label text-md-end">ชื่อ-นามสกุล</label>
                        <div class="col-md-7">
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label asp-for="Email" class="col-md-4 col-form-label text-md-end">อีเมล</label>
                        <div class="col-md-7">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label asp-for="DateOfBirth" class="col-md-4 col-form-label text-md-end">วัน/เดือน/ปีเกิด</label>
                        <div class="col-md-7">
                            <input asp-for="DateOfBirth" type="text" class="form-control datepicker-profile" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h6 class="text-center mb-3">เปลี่ยนรหัสผ่าน (กรอกเฉพาะเมื่อต้องการเปลี่ยน)</h6>

                    <div class="row mb-3 align-items-center">
                        <label asp-for="CurrentPassword" class="col-md-4 col-form-label text-md-end">รหัสผ่านปัจจุบัน</label>
                        <div class="col-md-7">
                            <input asp-for="CurrentPassword" type="password" class="form-control" autocomplete="new-password" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label asp-for="NewPassword" class="col-md-4 col-form-label text-md-end">รหัสผ่านใหม่</label>
                        <div class="col-md-7">
                            <input asp-for="NewPassword" type="password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <label asp-for="ConfirmNewPassword" class="col-md-4 col-form-label text-md-end">ยืนยันรหัสผ่านใหม่</label>
                        <div class="col-md-7">
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="row mb-3 align-items-center">
                        <label asp-for="NewDrivingLicenseFile" class="col-md-4 col-form-label text-md-end">อัปโหลดใบขับขี่ใหม่</label>
                        <div class="col-md-7">
                            <input asp-for="NewDrivingLicenseFile" type="file" class="form-control" />
                            <span asp-validation-for="NewDrivingLicenseFile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-7 offset-md-4">
                            <button type="submit" class="btn btn-primary">บันทึกการเปลี่ยนแปลง</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>