@using MyProject.Data
@inject MyBookstoreDbContext dbContext
@using Microsoft.EntityFrameworkCore
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyProject</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/css/bootstrap-datepicker3.min.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="https://kit.fontawesome.com/5ea815c1d0.js" crossorigin="anonymous"></script>
</head>
<body>
    <header>
        <nav id="custom-navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["home"]</a>
                        </li>
                        <li class="nav-item">
                            <a href="#footer-section" class="scroll-button nav-link">@Localizer["contact"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Review" asp-action="Reviews">@Localizer["review"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Redeem" asp-action="Index">@Localizer["insurance"]</a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated && User.IsInRole("Admin")) @* <<< เช็คว่าเป็น Admin *@
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Admin" asp-action="Index">
                                    @* <<< ลิงก์ไป /Admin *@
                                    <i class="fas fa-user-shield me-1"></i> Admin Panel @* <<< ข้อความ + Icon *@
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item lang-selector-container">
                            <a class="btn-lang-pill" href="#">
                                🌐
                                @{
                                    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName;

                                    if (currentCulture == "th")
                                    {
                                        @:ไทย
                                    }
                                    else
                                    {
                                        @:English
                                    }
                                }
                            </a>
                            <div class="lang-dropdown-custom">

                                <a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="en">English (EN)</a>

                                <a class="dropdown-item" asp-controller="Language" asp-action="Index" asp-route-culture="th">ไทย (TH)</a>

                            </div>
                        </li>
                    </ul>
                    <div class="auth-buttons">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            var userEmailForLayout = User.FindFirstValue(System.Security.Claims.ClaimTypes.Email);
                            MyProject.Models.User? userForLayout = null; // <<< สร้างตัวแปร User (ใส่ Namespace Model ของคุณ)
                            int pointsToShow = 0;

                            if (!string.IsNullOrEmpty(userEmailForLayout))
                            {
                                userForLayout = await dbContext.Users.FirstOrDefaultAsync(u => u.Email == userEmailForLayout);
                                if (userForLayout != null)
                                {
                                    pointsToShow = userForLayout.UserPoint; // <<< อ่านค่า Point ล่าสุดจาก DB
                                }
                            }
                            <div class="user-profile-bar">
                                <a href="#" id="showProfileModalBtn" class="user-details-link">
                                    <i class="fa-solid fa-user-circle"></i>
                                    <span>@(userForLayout?.Name ?? User.Identity.Name)</span> @* แสดงชื่อจาก DB ถ้ามี, ถ้าไม่มีใช้ชื่อจาก Claims *@

                                    <i class="fa-solid fa-star"></i>
                                    <span id="layoutUserPoints">@pointsToShow Points</span> @* <<< แสดง Point ล่าสุด *@

                                    <i class="fa-solid fa-circle-check"></i>
                                    <span>@(userForLayout?.Status ?? "")</span> @* แสดง Status จาก DB (ถ้ามี) *@
                                </a>
                                <a asp-controller="Account" asp-action="Logout" class="btn-logout-yellow">@Localizer["logout"]</a>
                            </div>
                        }
                        else
                        {
                            <a href="#" class="btn-login show-auth-modal" data-form="login">@Localizer["log in"]</a>
                            <a href="#" class="btn-signup show-auth-modal" data-form="signup">@Localizer["sign up"]</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @if (TempData["RegisterError"] != null || TempData["RegisterSuccess"] != null)
    {
        <div class="floating-alert-container">
            @if (TempData["RegisterError"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["RegisterError"]
                </div>
            }
            @if (TempData["RegisterSuccess"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["RegisterSuccess"]
                </div>
            }
        </div>
    }

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer id="footer-section" class="footer-local">
        @* หรือชื่อคลาส Footer เดิมของคุณ *@
        <div class="container">
            <div class="footer-local__main">

                @* --- ส่วนข้อมูลสาขา (แก้ไข) --- *@
                <div class="footer-local__info">
                    @{
                        // ดึงข้อมูลจาก ViewBag มาเก็บในตัวแปร และตรวจสอบ null
                        var branchDetails = ViewBag.BranchDetailsForLayout as MyProject.ViewModels.SelectedBranchDetailsViewModel;
                    }

                    @if (branchDetails != null) // ถ้ามีข้อมูลสาขาจาก ViewBag (แสดงว่าอยู่หน้า Index ที่มี Filter)
                    {
                        <h3>The Best Motor bike near you</h3>
                        <h3>(สาขา @branchDetails.Name)</h3>
                        <p>
                            <br><strong>ที่อยู่: </strong> @(branchDetails.Address ?? "N/A")
                            <br><strong>อีเมล:</strong> <a href="mailto:rentnewalpha124@hotmail.com">rentnewalpha124@hotmail.com</a>
                            <br><strong>เบอร์โทร: </strong>
                            @if (!string.IsNullOrEmpty(branchDetails.PhoneNumber))
                            {
                                <a href="tel:@branchDetails.PhoneNumber">@branchDetails.PhoneNumber</a>
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </p>      
                    }
                    else // ถ้าไม่มีข้อมูล (เช่น อยู่หน้าอื่น หรือโหลด Index ครั้งแรกสุดๆ ไม่มี Default)
                    {
                        <h3>The Best Motor bike near you</h3> @* แสดงข้อความ Default *@
                        <br>
                        <p>
                            <br><strong>ที่อยู่: 999 หมู่ 1 ถนนบางนา-ตราด หนองปรือ บางพลี สมุทรปราการ 10540</strong>
                            <br><strong>อีเมล:</strong> <a href="mailto:rentnewalpha124@hotmail.com">rentnewalpha124@hotmail.com</a>
                            <br><strong>เบอร์โทร:</strong> <a href="tel:0641522888">064-152-2888</a>, <a href="tel:0864714850">086-471-4850</a>
                        </p>
                    }
                </div>

                @* --- ส่วนแผนที่ (แก้ไข) --- *@
                <div class="footer-local__map">
                    @if (branchDetails != null && !string.IsNullOrEmpty(branchDetails.MapUrl)) // เช็คข้อมูล MapUrl จาก ViewBag ด้วย
                    {
                        <iframe src="@branchDetails.MapUrl"
                                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                    }
                    else // ถ้าไม่มีข้อมูลแผนที่ (หน้าอื่น หรือ สาขาไม่มี MapUrl)
                    {
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3877.200189912534!2d100.74555137591605!3d13.64273899933808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x311d604253685a7d%3A0x1334139ce35b1350!2sSuvarnabhumi%20Airport!5e0!3m2!1sen!2sth!4v1668589988123!5m2!1sen!2sth"
                                width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade"></iframe>
                    }
                </div>
            </div>

            @* --- ส่วน Bottom (Copyright/Social) - อาจจะเหมือนเดิม --- *@
            <div class="footer-local__bottom">
                <span>&copy; @DateTime.Now.Year The Best Motor bike near you (THAILAND)</span>
                <div class="footer-local__social">
                    <ul>
                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li> @* ต้องมี Font Awesome *@
                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fab fa-line"></i></a></li>
                    </ul>
                </div>
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        var currentCulture = '@System.Globalization.CultureInfo.CurrentCulture.TwoLetterISOLanguageName';
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.10.0/dist/locales/bootstrap-datepicker.th.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    <script src="~/js/reviews.js" asp-append-version="true"></script>
    <script src="~/js/profile-modal.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    <partial name="_RegisterModalPartial" model="new MyProject.ViewModels.RegisterViewModel()" />
    <partial name="_LoginModalPartial" model="new MyProject.ViewModels.LoginViewModel()" />
    <partial name="_ProfileModalPartial" model="new MyProject.ViewModels.ProfileViewModel()" />
    <partial name="_BookingHistoryModalPartial" />
    <partial name="_RedemptionHistoryModalPartial" />
    <partial name="_RentalHistoryModalPartial" />

</body>
</html>