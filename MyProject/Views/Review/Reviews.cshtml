@model MyProject.ViewModels.ReviewPageViewModel
@{
    ViewData["Title"] = "รีวิวจากลูกค้า";
}

<div class="review-container">
    <h1 class="page-title">📝 เขียนรีวิวของคุณ</h1>

    <form id="reviewForm" class="review-form" method="post">
        @Html.AntiForgeryToken()
        <div class="form-row">
            <div class="form-group">
                <label for="ProductId">เลือกรถ (ถ้ามี):</label>
                <select id="ProductId" name="ProductId" class="form-control" asp-items="@(new SelectList(Model.Products, "Value", "Text"))">
                    <option value="">-- ไม่ระบุ --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="BranchId">เลือกสาขา (ถ้ามี):</label>
                <select id="BranchId" name="BranchId" class="form-control" asp-items="@(new SelectList(Model.Branches, "Value", "Text"))">
                    <option value="">-- ไม่ระบุ --</option>
                </select>
            </div>
        </div>

        <div class="form-group rating-group">
            <label>ให้คะแนน:</label>
            <div class="star-wrapper">
                <i class="fas fa-star s5" data-value="5"></i>
                <i class="fas fa-star s4" data-value="4"></i>
                <i class="fas fa-star s3" data-value="3"></i>
                <i class="fas fa-star s2" data-value="2"></i>
                <i class="fas fa-star s1" data-value="1"></i>
            </div>
            <input type="hidden" id="Rating" name="Rating" value="0" />
        </div>

        <div class="form-group">
            <label for="Comment">แสดงความคิดเห็น:</label>
            <textarea id="Comment" name="Comment" class="form-control" placeholder="เขียนความคิดเห็นของคุณที่นี่..." rows="4"></textarea>
        </div>

        <button type="submit" class="btn-submit-review">ส่งรีวิว</button>
    </form>

    <hr class="my-4" /> <div class="review-filters mb-4">
        <br><h3 style="font-size: 1.5rem; color: #555; margin-bottom: 1rem;">🔍 กรองรีวิวตาม:</h3>
        <div class="row gx-3 gy-2 align-items-center">
            <div class="col-sm-4">
                <label class="visually-hidden" for="filterProduct">รถ</label>
                <select id="filterProduct" class="form-select form-select-sm">
                    <option value="">-- รถทั้งหมด --</option>
                    @* วนลูป Products จาก Model *@
                    @foreach (var item in Model.Products)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-4">
                <label class="visually-hidden" for="filterBranch">สาขา</label>
                <select id="filterBranch" class="form-select form-select-sm">
                    <option value="">-- ทุกสาขา --</option>
                    @* วนลูป Branches จาก Model *@
                    @foreach (var item in Model.Branches)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-3">
                <label class="visually-hidden" for="filterRating">คะแนน</label>
                <select id="filterRating" class="form-select form-select-sm">
                    <option value="">-- ทุกคะแนน --</option>
                    <option value="5">★★★★★ (5 ดาว)</option>
                    <option value="4">★★★★☆ (4 ดาวขึ้นไป)</option>
                    <option value="3">★★★☆☆ (3 ดาวขึ้นไป)</option>
                    <option value="2">★★☆☆☆ (2 ดาวขึ้นไป)</option>
                    <option value="1">★☆☆☆☆ (1 ดาวขึ้นไป)</option>
                </select>
            </div>
            <div class="col-sm-1">
                <button id="resetFilters" class="btn btn-outline-secondary btn-sm w-100" title="ล้างตัวกรอง">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    </div>

    <div id="reviewList" class="review-list">
        <h2 class="page-title" style="margin-top: 4rem;">💬 รีวิวล่าสุดจากลูกค้า</h2>

        @foreach (var review in Model.Reviews)
        {
            <div class="review-card" id="review-@review.ReviewId">
                <div class="review-header">
                    <span class="review-author">@review.UserName</span>
                    <div class="review-header-actions">
                        <span class="review-time">@review.PostedAgo</span>
                        @if (review.IsOwner)
                        {
                            <a href="#" class="btn-delete-review" data-id="@review.ReviewId" title="ลบรีวิวนี้">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        }
                    </div>
                </div>
                <div class="review-body">
                    <div class="review-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="star @(i <= review.Rating ? "filled" : "")">★</span>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(review.ProductName) || !string.IsNullOrEmpty(review.BranchName))
                    {
                        <div class="review-context">
                            @if (!string.IsNullOrEmpty(review.ProductName))
                            {
                                <span><strong>รถ:</strong> @review.ProductName</span>
                            }
                            @if (!string.IsNullOrEmpty(review.BranchName))
                            {
                                <span><strong>สาขา:</strong> @review.BranchName</span>
                            }
                        </div>
                    }
                    <p class="review-comment">"@review.Comment"</p>
                </div>
            </div>
        }
    </div>

    <div id="reviewList" class="review-list">
    </div> @if (Model.ReviewsCurrentlyDisplayed < Model.TotalReviewCount)
    {
        <div class="load-more-container">
            <button id="btnLoadMoreReviews" class="btn-submit-review" style="background-color: #1e3a8a; color: #fff;">
                โหลดรีวิวเพิ่มเติม
            </button>
        </div>
    }
</div>